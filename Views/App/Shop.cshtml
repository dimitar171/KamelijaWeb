@model IEnumerable<Product>
@section Scripts{
    <script src="~/ts/shopper.js"></script>
    <script src="~/ts/main.js"></script>
}
<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
    <div class="col-md-3">
        <div class="border bg=light rounded p-1">
            <img src="~/img/Naslovna.png" class="img-fluid" alt="@p.Title"/>
            <h3>@p.Category - @p.Size</h3>
            <ul class="products-props">
                <li>Цена: $@p.Price</li>
                <li>Изработил:@p.Artist </li>
                <li>Вид: @p.Title </li>
                <li>Опис:@p.ArtDescription </li>
            </ul>
            <button id="buyButton" class="btn btn-success">Купи</button>
        </div>
    </div>
    }
    </div>
